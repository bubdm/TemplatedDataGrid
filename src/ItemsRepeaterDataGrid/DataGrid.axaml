<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:g="using:ItemsRepeaterDataGrid">
  <Design.PreviewWith>
    <g:DataGrid />
  </Design.PreviewWith>
  <Style Selector="g|DataGrid">
    <Setter Property="Template">
      <ControlTemplate>
        <Grid Name="PART_Root">
          <!-- DataGridColumnHeadersPresenter -->
          <Grid Name="PART_ColumnHeaders" />
          <!-- DataGridRowsPresenter -->
          <ScrollViewer Name="PART_ScrollViewer">
            <ItemsRepeater Name="PART_ItemsRepeater" Items="{TemplateBinding Items}">
              <ItemsRepeater.Layout>
                <StackLayout Orientation="Vertical" />
              </ItemsRepeater.Layout>
            </ItemsRepeater>
          </ScrollViewer>
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
  <Style Selector="g|DataGrid /template/ Grid#PART_Root > Separator">
    <Setter Property="Background" Value="Gray" />
  </Style>
  <Style Selector="g|DataGrid /template/ Grid#PART_Root > GridSplitter">
    <Setter Property="Background" Value="Transparent" />
  </Style>
  <Style Selector="g|DataGrid /template/ ScrollViewer#PART_ScrollViewer">
    <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
    <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
  </Style>
</Styles>
